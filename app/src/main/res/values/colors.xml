<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="colorPrimary">#B4B4B4</color>
    <color name="colorPrimaryDark">#5C5C5C</color>
    <color name="colorAccent">#94E4C8</color>

    <color name="darkColorPrimary">#585858</color>
    <color name="darkColorPrimaryDark">#161616</color>
    <color name="darkColorAccent">#77D1C1</color>

    <!-- Shortcut Icon -->
    <color name="shortcutIconBackground">#1A73E9</color>
    <color name="shortcutIconForeground">#FFF</color>

    <!-- Navigation Bar
    * Must be solid color, no alpha -->
    <color name="navigationBar">#E2E2E2</color>
    <color name="navigationBarDark">#333333</color>

    <!-- Splash Screen -->
    <color name="splashColor">#F0F0F0</color>

    <!-- Navigation View -->
    <color name="navigationViewHeaderBackground">#00FFFFFF</color>
    <color name="navigationViewHeaderBackgroundDark">#00FFFFFF</color>
    <color name="navigationViewTitle">#FFFFFF</color>
    <color name="navigationViewTitleBack">#33000000</color>

    <color name="navigationViewText">#484848</color>
    <color name="navigationViewTextDark">#DDFFFFFF</color>
    <color name="navigationViewTextSelected">#0F0F0F</color>
    <color name="navigationViewTextSelectedDark">@color/colorAccent</color>
    <color name="navigationViewSelectedBackground">#00000000</color>
    <color name="navigationViewSelectedBackgroundDark">#00000000</color>

    <!-- Swipe Refresh -->
    <color name="swipeRefresh">#23BEA5</color>

    <!-- Toolbar -->
    <color name="toolbarIcon">#FFF</color>
    <color name="toolbarIconDark">#FFFFFFFF</color>

    <!-- Tab -->
    <color name="tabIndicator">#FFF</color>
    <color name="tabIndicatorDark">@color/colorAccent</color>
    <color name="tabText">#32FFFFFF</color>
    <color name="tabTextDark">@color/tabText</color>
    <color name="tabTextSelected">#FFF</color>
    <color name="tabTextSelectedDark">@color/colorAccent</color>

    <!-- Card -->
    <color name="cardBackground">#FFFFFF</color>
    <color name="cardBackgroundDark">#2C2C2C</color>
    <color name="cardStroke">#11000000</color>
    <color name="cardStrokeDark">#11000000</color>

    <!-- Ripple -->
    <color name="rippleColor">@color/navigationViewTextSelected</color>
    <color name="rippleColorDark">@color/rippleColor</color>
    <color name="rippleAccent">@color/colorAccent</color>
    <color name="rippleAccentDark">@color/rippleAccent</color>

    <!-- Attributes -->
    <color name="mainBackground">#FAFAFA</color>
    <color name="mainBackgroundDark">#000000</color>
    <color name="primaryText">#484848</color>
    <color name="primaryTextDark">#EEFFFFFF</color>
    <color name="secondaryText">#777777</color>
    <color name="secondaryTextDark">#99FFFFFF</color>
    <color name="dividerList">#EEEEEE</color>
    <color name="dividerListDark">#22FFFFFF</color>

    <!-- Wallpaper Preview -->
    <color name="wallpaperStatusBar">@color/wallpaperToolbar</color>
    <color name="wallpaperToolbar">#66000000</color>

</resources>
